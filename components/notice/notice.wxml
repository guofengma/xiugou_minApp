<import src="../../libs/wxParse/wxParse.wxml" />

<view class='model-view-bg ' wx:if="{{visiable}}">
  <view class='container'>
    <view class='notice-view boxSize'>
      <swiper indicator-dots="true" style='height:780rpx;' class='swiper-box' indicator-color='rgba(217,193,131,0.7)' indicator-active-color='#D9C183'>
        <block wx:for="{{list}}" wx:key='{{index}}'>
          <swiper-item>
            <view class='scroll-view'>
              <view class='flexR title'>{{item[0].title}}</view>
              <scroll-view scroll-y class='notice-scroll boxSize'>
                <view class='font-24 gray'>
                  <template is="wxParse" data="{{wxParseData:item}}"/>
                </view>
              </scroll-view>
            </view>
          </swiper-item>
        </block>
      </swiper>
      <view class='close' catchtap='close'>
        <image-sub imgStyle='{{"width:47rpx"}}' imgSrc="{{'red-envelopes.png'}}" />
      </view>
    </view>
  </view>
</view>