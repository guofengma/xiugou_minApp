.cart-product-info{
  background: #fff;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 20rpx 36rpx 20rpx 24rpx;
}
.cart-product-info.flexR{
  justify-content: flex-start;
  align-items: flex-start;
}
.cart-product-info .flexR{
  justify-content: space-between
}
.right-bar{
  padding-top: 15rpx;
}
.right-top-bar>view:first-child{
  height:70rpx;
}
.right-bar .gray.ellipsis-2{
  margin-top: 5rpx;
  margin-bottom: 20rpx;
}
.cart-product-info image{
  vertical-align:middle;
}
.leftbar{
  margin-right: 30rpx;
  position: relative;
}
.labelName{
  padding: 0rpx 6rpx;
  border: 1rpx solid;
  border-radius: 5rpx;
}
.prdName{
  line-height: 36rpx;
}
.statusImg{
  position: absolute;
  left: 16rpx;
  top:16rpx;
}
.statusImg image{
  width: 128rpx;
  height: 128rpx;
}