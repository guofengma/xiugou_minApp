.cascade_box{
    font-size:28rpx;
    width: 100%;
    height: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99999;
    background: rgba(0,0,0,0.5);
}
.cascade_hei{
    width: 100%;
    height:calc(100% - 520rpx);
}
.cascade_find{
    width: 100%;
    height: 520rpx;
    position: relative;
    background: #fff;
}

.quxiao,.queren{
    display: block;
    position: absolute;
    width: 100rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #f00006;
}
.queren{
    right: 0;
    top: 0;
}
.cascade_header{
    height: 80rpx;
    width: 100%;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
}

