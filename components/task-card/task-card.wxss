@import '../../css/app.wxss';
.card-container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  text-align: center;
  white-space: nowrap;
  z-index: 99;
}
.card-container::after {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.card-body {
  width: 488rpx;
  height: 560rpx;
  display: inline-block;
  vertical-align: middle;
  border-radius: 10rpx;
  background-color: #fff;
  white-space: normal;
  position: relative;
}
.card-close {
  width: 48rpx;
  height: 48rpx;
  padding: 20rpx;
  position: absolute;
  top: -120rpx;
  right: -50rpx;
}
.card-content {
  margin-top: -30rpx;
}
.card-content.fail {
  margin-top: 70rpx;
}
.card-content .text {
  text-align: center;
  color: #666;
  font-size: 22rpx;
  line-height: 32rpx;
}
.card-success-item {
  margin-bottom: 10rpx;
}
.card-thumb {
  width: 322rpx;
  height: 290rpx;
  position: relative;
  top: -44rpx;
}
.card-success-count {
  color: #FF1A54;
  font-size: 60rpx;
}
.card-success-sup {
  color: #666;
}
.card-tip {
  color: #999;
  font-size: 22rpx;
  text-align: center;
  margin-top: 10rpx;
}
.btn-see {
  width: 404rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #D51243;
  border-radius: 40rpx;
  margin: 30rpx auto 0;
}
.btn-get {
  width: 316rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #f00006;
  color: #fff;
  text-align: center;
  margin: 50rpx auto 0;
}
.card-title {
  margin: 20rpx 0 40rpx;
}
.card-task-wrap {
  position: relative;
  width: 260rpx;
  height: 176rpx;
  margin: 0 auto;
}
.card-task-thumb {
  width: 100%;
  height: 100%;
}
.card-task-award {
  font-size: 28rpx;
  color: #F00006;
  position:absolute;
  left:140rpx;
  top:90rpx;
}
.card-task-award text {
  font-size: 24rpx;
}
.card-task-desc {
  margin-top: 38rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}