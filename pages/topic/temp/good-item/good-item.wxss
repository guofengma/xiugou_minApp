.good-item {
  width: 335rpx;
  display: inline-block;
  background: #fff;
  margin-bottom: 27rpx;
}
.good-item:nth-child(odd){
  margin-right: 20rpx;
}
.good-item-thumb{
  width: 100%;
  height: 335rpx;
}
.good-detail {
  padding: 20rpx 20rpx 30rpx;
  height:219rpx;
  position:relative;
}
.good-title {
  display: -webkit-box;
  font-size:24rpx;
  word-break: break-all;
  max-height: 64rpx;
}
.good-type {
  font-size: 22rpx;
  margin-top: 21rpx;
}
/* 关注  */
.good-type-tip {
  color: #33B4FF;
}
/* 抢光  */
.good-type-out{
  color: #999;
}
/* 已抢  */
.good-type-ing{
  color: #fff;
  background: #f2b7c6;
  border-radius: 20rpx;
  padding-right: 12rpx;
  
}
.good-type-ing .good-loot-already{
  min-width: 50%;
  background: #D51243;
  border-radius: 20rpx;
  padding: 0 12rpx;
}

.good-foot{
  display:flex;
  flex-direction:row;
  align-items:flex-end;
  justify-content:space-between;
  position:absolute;
  bottom:30rpx;
  width:295rpx;
}
.good-price-discount{
  color: #E60012;
  font-size: 32rpx;
  line-height: 32rpx;
}
.good-price-origin {
  color: #999;
  font-size: 22rpx;
  line-height: 20rpx;
  text-decoration: line-through;
}
.good-operate{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:10rpx;
  font-size: 24rpx;
  text-align: center;
}
/* 马上抢  */
.good-operate.loot {
  color: #fff;
  background:#D51243;
}
/* 抢光了  */
.good-operate.out{
  color: #999;
  background:#f7f7f7;
}
/* 提醒  */
.good-operate.tip{
  color: #fff;
  background:#33B4FF;
}
.good-operate.tip .icon {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}