/* 秒杀、降价时间tab */
.tab-timeq {
  width: 100%;
  height: 140rpx;
  background: #fff;
  white-space: nowrap;
  position: relative;
  background: #f7f7f7;
  margin-top: -20rpx;  
}
.tab-timeq-item {
  display: inline-block;
}
.tab-item-wrap {
  /* width: 150rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 20rpx 10rpx 15rpx;
  box-sizing: border-box;
  height: 110rpx;
  flex-direction:column;
}
.tab-timeq-item-time{
  color: #222;
  font-size: 36rpx;  
  line-height: 36rpx;
  font-weight: 400;
  font-family: 'Helvetica';
}
.tab-timeq-item-desc {
  font-size: 24rpx;
  color: #999;
}
.tab-timeq-ing{
  background: #f00006;
  position:relative;
}
