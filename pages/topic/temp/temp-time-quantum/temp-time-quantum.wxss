/* 秒杀、降价时间tab */
.tab-timeq {
  width: 100%;
  height: 140rpx;
  background: #fff;
  white-space: nowrap;
  position: relative;
  background: #f7f7f7;
}
.tab-timeq-item {
  width: 150rpx;
  display: inline-block;
  text-align: center;
  padding: 20rpx 0 15rpx;
  background: #fff;
}
.tab-timeq-item-time{
  color: #222;
  font-size: 36rpx;  
  font-weight: 400;
  font-family: 'Helvetica';
}
.tab-timeq-item-desc {
  font-size: 24rpx;
  color: #999;
}
.tab-timeq-ing{
  background: #D51243;
  position:relative;
}
.tab-timeq-ing::after{
  display: block;
  content: '';
  width: 0;
  height: 0;
  border-color: #D51243 transparent transparent;
  border-style: solid;
  border-width: 30rpx;
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  top: 110rpx;
}
.tab-timeq-ing .tab-timeq-item-time,.tab-timeq-ing .tab-timeq-item-desc{
  color: #fff;
}