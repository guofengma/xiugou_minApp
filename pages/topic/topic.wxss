/* 秒杀、降价时间tab */
.tab-timeq {
  width: 100%;
  height: 140rpx;
  background: #fff;
  white-space: nowrap;
  position: relative;
  background: #f7f7f7;
}
.tab-timeq-item {
  width: 150rpx;
  display: inline-block;
  text-align: center;
  padding: 20rpx 0 15rpx;
  background: #fff;
}
.tab-timeq-item-time{
  color: #222;
  font-size: 36rpx;  
  font-weight: 400;
  font-family: 'Helvetica';
}
.tab-timeq-item-desc {
  font-size: 24rpx;
  color: #999;
}
.tab-timeq-ing{
  background: #D51243;
  position:relative;
}
.tab-timeq-ing::after{
  display: block;
  content: '';
  width: 0;
  height: 0;
  border-color: #D51243 transparent transparent;
  border-style: solid;
  border-width: 30rpx;
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  top: 110rpx;
}
.tab-timeq-ing .tab-timeq-item-time,.tab-timeq-ing .tab-timeq-item-desc{
  color: #fff;
}

/* 秒杀降价商品item  */
.goods-container{
  padding: 20rpx 30rpx;
  background: #f7f7f7;
  
}
.good-item {
  width: 335rpx;
  display: inline-block;
  background: #fff;
  margin-bottom: 27rpx;
}
.good-item:nth-child(odd){
  margin-right: 20rpx;
}
.good-item-thumb{
  width: 100%;
  height: 335rpx;
}
.good-detail {
  padding: 20rpx 20rpx 30rpx;
}
.good-title {
  display: -webkit-box;
  font-size:24rpx;
  /* line-height: 40rpx; */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  color: #222;
}


.good-type {
  font-size: 22rpx;
  margin: 21rpx 0 29rpx;
}
/* 关注  */
.good-type-tip {
  color: #33B4FF;
}
/* 抢光  */
.good-type-out{
  color: #999;
}
/* 已抢  */
.good-type-ing{
  color: #fff;
  background: #f2b7c6;
  border-radius: 20rpx;
  padding-right: 12rpx;
  
}
.good-type-ing .good-loot-already{
  width: 50%;
  background: #D51243;
  border-radius: 20rpx;
  padding: 0 12rpx;
}

.good-foot{
  display:flex;
  flex-direction:row;
  align-items:flex-end;
  justify-content:space-between;
}
.good-price-discount{
  color: #E60012;
  font-size: 32rpx;
}
.good-price-origin {
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
}
.good-operate{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:10rpx;
  font-size: 24rpx;
  text-align: center;
}
/* 马上抢  */
.good-operate.loot {
  color: #fff;
  background:#D51243;
}
/* 抢光了  */
.good-operate.out{
  color: #999;
  background:#f7f7f7;
}
/* 提醒  */
.good-operate.cancel-tip,.good-operate.tip{
  color: #fff;
  background:#33B4FF;
}
