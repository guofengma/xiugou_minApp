<view class='sign-page sub-page'>
  <view class='gray-9 font-24 rule'>
    <image-sub imgStyle='{{"width:30rpx"}}' imgSrc="{{'home_icon.png'}}"/>
    <text> 签到规则</text>
  </view>
  <!-- 签到按钮 -->
  <view class='sign-btn-view'>
    <view class='sign-btn flexR'>
      <text class='font-38'>签</text>
    </view>
    <view class='font-24 gray-9 flexR'>
      <text>累计签到1天</text>
    </view>
  </view>
  <!-- 签到日历 -->
  <view class='sign-date-view boxSize'>
    <view class='line-view flexC' wx:for='{{7}}' wx:key='{{index}}'>
      <view class='xdNum font-24 flexC whiteBg'>+{{index}}</view>
      <view class='time font-22 white'>09.18</view>
      <view class='line'></view>
    </view>
  </view>
  <!-- 兑换1元劵 -->
  <view class='coin-coupon-view whiteBg flexR-sb boxSize'>
    <view class='leftBar flexR'>
      <view class='left red font-24'>
        <text class='coinNum'>1</text>元
      </view>
      <view class='right'>
        <view class='font-28'>现金抵扣卷</view>
        <view class='gray font-24'>全场通用/无时间限制</view>
      </view>
    </view>
    <view class='rightBar flexC'>
      <view class='font-24'>消耗秀豆</view>
      <view class='red font-24'>- 100 -</view>
      <view class='redBg coinBtn flexC font-24'>立即兑换</view>
    </view>
  </view>
  <!-- 备注 -->
  <view class='font-24 gray-9 tips'>
    注：100秀豆兑换1张劵，无兑换限制，点击即可兑换
  </view>

  <!-- 优惠卷张数 -->
  <view class='font-24 gray-9 flexC'>
     已有3张现金劵>
  </view>
</view>
