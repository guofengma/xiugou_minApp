.discover-item-container {
  display: flex;
  flex-wrap: wrap;
}
.discover-list-item-aside {
  flex: 1;
}
.discover-list-item {
  width: 336rpx;
  margin-bottom: 20rpx;
}
.discover-list-item_thumb {
  position: relative;
}
.discover-list-item_thumb image {
  width: 100%;
}
.discover-list-item_thumb .discover_view {
  position:absolute;
  bottom: 0;
  padding-left: 20rpx;
  color: #fff;
  width: 100%;
  background: linear-gradient( rgba(255,255,255,0),rgba(0,0,0,0.4));
  height: 60rpx;
  box-sizing: border-box;
}
.discover-list-item-body {
  padding: 20rpx;
  background: #fff;
}
.discover-list-item_title {
  color: #666;
  height: 66rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  margin-bottom: 24rpx;
}

.ellipsis-2 {
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
