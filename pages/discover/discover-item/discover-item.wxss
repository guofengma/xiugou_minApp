.discover-item-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.discover-list-item {
  width: 336rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.discover-list-item-edit {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
}
.discover-list-item_thumb {
  position: relative;
}
.discover-list-item_thumb image {
  width: 100%;
}
.discover-list-item_thumb .discover_view {
  position:absolute;
  bottom: 0;
  padding-left: 20rpx;
  color: #fff;
  width: 100%;
  background: linear-gradient( rgba(255,255,255,0),rgba(0,0,0,0.4));
  height: 60rpx;
  box-sizing: border-box;
}
.discover-list-item-body {
  padding: 20rpx;
  background: #fff;
}
.discover-list-item_title {
  color: #666;
  height: 66rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  margin-bottom: 24rpx;
}

.discover_author {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
}
.discover_avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.discover_view {
  color: #808080;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.discover_view image {
  width: 34rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.discover_author_name {
  display: inline-block;
  /* max-width: 126rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  height: 32rpx;
  white-space: nowrap;
  flex: 1;
  padding: 0 10rpx;
}
.discover_time {
  color: #939393;
}

.goTop{
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  background-color:transparent !important;
  
}
.goTop image{
  width: 90rpx;
}

.no-more {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin: 30rpx 0;
}