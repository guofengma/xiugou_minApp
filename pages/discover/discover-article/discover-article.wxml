<template name="discover-article">
  <view class="discover-article-container">
    <view class='discover-article_thumb' bindtap='handleItemClicked' data-id="{{id}}">
      <image src="{{coverImg}}"></image>
      <view class='discover-article_desc'>{{content}}</view>
    </view>
    <view class="discover-article_body">
      <view class='discover-article_info'>
        <view class='discover_author'>
          <image class='discover_avatar' src='https://mr-test-sg.oss-cn-hangzhou.aliyuncs.com/sharegoods/TB2EtekiP3z9KJjy0FmXXXiwXXa_!!2867551008.jpg'></image>
          <view class='discover_author_name'>、霓娜</view>
          <view class='discover_view'>
            <image src='/img/icon_view@3x.png'></image>
            <text>{{click}}</text>
          </view>  
        </view>
      </view>
    </view>
  </view>
</template>