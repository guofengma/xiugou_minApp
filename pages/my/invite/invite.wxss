.bg{
    background: url("https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/invite-bg.png") no-repeat top center;
    background-size: cover;
    width: 100%;
    height:100%;
    text-align: center;
    overflow: hidden;
    position: fixed;
}
.area{
    text-align: center;
    width: 80%;
    margin-left: 10%;
    height: 600rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    position: absolute;
    top:200rpx;
    z-index: 3;
}
.detail{
    position: absolute;
    top:-55rpx;
    left: 50%;
    transform: translateX(-50%);
}
.avature-img{
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    border:4rpx solid;
}
.code{
    width: 180rpx;
    height: 180rpx;
    border: solid 4rpx #55348f;
    margin-top: 60rpx;
}
.info{
    font-weight: 600;
    margin-top: 30rpx;
}
.title1{
    font-size: 24rpx;
    line-height: 40rpx;
}
.title2{
    font-size: 34rpx;
    color: #53328a;
    margin: 50rpx 0;
}
.title3{
    font-size: 30rpx;
}
.footer-area{
    position: absolute;
    width: 100%;
    top:22rpx;
    left: 50%;
    transform: translateX(-50%);
}
.tip{
    font-size: 26rpx;
    color: #ffffff;
    line-height: 40rpx;
}
.opr{
    width: 600rpx;
    margin: 0 auto;
    margin-top: 80rpx;
}
.opr view,.share{
    text-align: center;
    width: 37%;
    height: 96rpx;
    line-height: 96rpx;
    border-radius: 10rpx;
    border: 1rpx  solid #513187;
    font-size: 30rpx;
    color: #ffffff;
    font-weight: 600;
}
.share{
    background-color: transparent;
    border:0;
    width: 100%;
}

.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height:364rpx;
}
.footer image{
    /*position: ;*/
    width: 90%;
    height:364rpx;
    position: absolute;
    bottom: 0;
    left: 5%;
}