<import src='/components/iPhoneX-line/iPhoneX-line.wxml'/>


<view class='bg-area boxSize'>
  <view class="img-area">
    <image class="avatar-img" src="{{userInfos.headImg||'/img/default-userImg.png'}}" alt=""></image>
  </view>
  <view class='levelName boxSize flexR'>
    <text>荣誉总监</text>
  </view>
</view>

<view class='growing-view-bg'>
 <view class='growing-view boxSize font-22'>
  <view class='icon-growing flexR-sb font-30'>
    成长值
  </view>
  <view class='growing-value'>
    <view>
      <text class='red'>4500</text>
      <text class='gray'>/6000</text>
    </view>
    <view class='growing-bar'>
      <view class='growing-bar-value' style='width:{{width}};'></view>
    </view>
    <view>
      距离晋升还差
      <text class='font-30'>1000分</text>
    </view>
  </view>
</view>
</view>

<view class='growing-question whiteBg'>
  <view class='title ellipsis font-28'>题目</view>
  <view class='ellipsis gray font-26'>哈哈哈哈</view>
</view>

<view class='base-bar flexR {{isIPhoneX.className}}'>
  <view class='flexR'>邀请好友</view>
  <view class='redBg flexR'>去购物</view>
</view>

<!--适配iPhone X  -->
<template wx:if='{{isIPhoneX.isIPhoneX}}' is="iPhoneX-line" />
