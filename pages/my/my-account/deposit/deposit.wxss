.cash{
    padding: 20rpx 30rpx;
}
.item{
    width: 100%;
    height: 280rpx;
    color: #fff;
    margin-bottom: 20rpx;
    position: relative;
    background: url("https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/icon08_03@2x.png") no-repeat top center;
    background-size: cover;
}
.title{
    font-size: 26rpx;
    position: absolute;
    top:30rpx;
    left: 30rpx;
}
.num{
    font-size: 48rpx;
    margin: 60rpx;
    position: absolute;
    top:50rpx;
    left: 50rpx;
}
.btn{
    width: 200rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    border: solid 1rpx #ffffff;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    bottom:75rpx;
    right: 50rpx;
}
.explain{
    font-size: 22rpx;
    position: absolute;
    bottom:30rpx;
    right: 90rpx;
}
.explain image{
    width: 26rpx;
    height: 26rpx;
    margin-right: 5rpx;
    vertical-align: middle;
    margin-top: -1rpx;
}
.list-item{
    display: flex;
    /* justify-content: space-around; */
    background: #fff;
    width: 100%;
    margin-bottom: 2rpx;
    padding: 30rpx;
    position: relative;
    box-sizing: border-box;
}
.list-item image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #ff7e00;
    margin-top: 10rpx;
    margin-right: 30rpx;
}
.style{
    font-size: 30rpx;
    color: #222222;
}
.money{
    font-size: 36rpx;
    color: #222222;
    position: absolute;
    right: 30rpx;
}
.time{
    margin: 10rpx 0;
}
.time,.number{
    font-size: 26rpx;
    color: #999999;
}
.number image{
    width: 26rpx;
    height: 26rpx;
    background-color: #fff;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -5rpx;
}
.detail{
    width: 45%;
}

.info{
    padding: 40rpx 40rpx 0;
}
.question{
    font-size: 30rpx;
    color: #000000;
}
.answer{
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 20rpx;
}
