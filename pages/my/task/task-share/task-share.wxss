@import '../task.wxss';
.task-share-card {
  width: 100%;
  height: 330rpx;
  background: url(https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/task_card_bg.png) no-repeat center;
  background-size: 100%;
  padding:24rpx 20rpx; 
  box-sizing: border-box; 
  position:relative;
}
.task-card {
  width: 100%;
  height: 182rpx;
}
.task-card.ready {
  
  line-height: 182rpx;
  background: url(https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/card_ready.png)no-repeat center;
  background-size: 100%;
  color: #D51243;
  font-size: 60rpx;
  text-align: center;
  font-family:PingFangSC-Medium;
  font-weight:500;
}
.task-card.coupon,.coupon-money .symbol {
  font-size: 24rpx;
}
.task-card.coupon .coupon-money {
  color: #D51243;
  width: 220rpx;  
  font-size: 72rpx;
  text-align: center;  
}
.noting-msg {
  line-height:182rpx;
  color: #666;
  font-size: 32rpx;
  text-align: center;
}
.coupon-info {
  color: #999;
}
.coupon-title {
  font-size: 28rpx;
  color: #333;
}
.coupon-detail {
  margin: 10rpx 0;
}
.bean-wrap {
  text-align: center;
}
.bean-icon {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}

.bean-count {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 72rpx; 
  color: #F00006; 
}
.bean-count text {
  font-size: 24rpx;
}
.bean-desc {
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}
.lottery_btn {
  width:280rpx;
  height:48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  background:rgba(213,18,67,.5);
  border-radius:42rpx;
  position: absolute;
  bottom: 35rpx;
  left: 50%;
  transform: translateX(-50%);
}
.lottery_btn.active {
  background: #D51243;
}
.lottery_btn.inactive {
  background: #ccc;
}

.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  text-align: center;
  white-space: nowrap;
  z-index: 99;
}
.modal::after {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.modal-body {
  width: 540rpx;
  height: 386rpx;
  display: inline-block;
  vertical-align: middle;
  border-radius: 5rpx;
  background-color: #fff;
  white-space: normal;
  position: relative;
}
.modal-title {
  font-size: 30rpx;
  color: #333;
  margin: 30rpx 0 70rpx;
  font-weight: bold;
}
.modal-input,.modal-btn {
  width:480rpx;
  height:80rpx;
  line-height:80rpx;
  border-radius:5rpx;
  font-size:28rpx;
  box-sizing:border-box;  
}
.modal-input {
  margin:0 auto;  
  text-align:left;
  border:1rpx solid #ddd;
  padding:0 20rpx;
}
.modal-btn {
  box-sizing:border-box;
  text-align: center;
  margin: 30rpx auto 0;
  background: #F00006;
  color: #fff;
}