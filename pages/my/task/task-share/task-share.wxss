@import '../task.wxss';
.task-share-card {
  width: 100%;
  height: 330rpx;
  background: url(https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/task_card_bg.png) no-repeat center;
  background-size: 100%;
  padding:24rpx 20rpx; 
  box-sizing: border-box; 
  position:relative;
}
.task-card {
  width: 100%;
  height: 182rpx;
}
.task-card.ready {
  
  line-height: 182rpx;
  background: url(https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/card_ready.png)no-repeat center;
  background-size: 100%;
  color: #D51243;
  font-size: 60rpx;
  text-align: center;
  font-family:PingFangSC-Medium;
  font-weight:500;
}
.task-card.coupon,.coupon-money .symbol {
  font-size: 24rpx;
}
.task-card.coupon .coupon-money {
  color: #D51243;
  width: 220rpx;  
  font-size: 72rpx;
  text-align: center;  
}
.coupon-info {
  color: #999;
}
.coupon-title {
  font-size: 28rpx;
  color: #333;
}
.coupon-detail {
  margin: 10rpx 0;
}
.bean-wrap {
  text-align: center;
}
.bean-icon {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}

.bean-count {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 72rpx; 
  color: #F00006; 
}
.bean-count text {
  font-size: 24rpx;
}
.bean-desc {
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}
.lottery_btn {
  width:280rpx;
  height:48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  background:rgba(213,18,67,.5);
  border-radius:42rpx;
  position: absolute;
  bottom: 35rpx;
  left: 50%;
  transform: translateX(-50%);
}
.lottery_btn.active {
  background: #D51243;
}