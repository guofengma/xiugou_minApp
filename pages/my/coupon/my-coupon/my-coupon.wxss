@import "/pages/my/coupon/temp/coupon-temp";

.tab-h{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 30rpx; 
  white-space: nowrap;
  position: fixed;
  top: 0; 
  left: 0; 
  z-index: 99;
  background:#fff; 
}
.tab-item{
  width: 33.3%;
  display: inline-block;
  text-align: center;
  position: relative;
}
.tab-item.red:after{ 
  content: "";
  display: block;
  height: 6rpx;
  width: 90rpx;
  background: #D51243;
  position: absolute; 
  bottom: 0;
  left: 50%;
  margin-left: -44rpx;
  border-radius: 16rpx;
}
.scoll-h{
  height: 100%;
}
.tab-content{
  margin-top: 80rpx;
  height: calc(100% - 80rpx);
}
.tab-content.tab-active{
  height: calc(100% - 190rpx)
}
.pagesize{
  height: 100%;
}

.btn-view{
  height: 100rpx;
  width: 100%;
  border-top: 1rpx solid #ddd;
}
.coupon-img image{
  width: 230rpx;
  margin-top: 200rpx;
  margin-bottom: 20rpx;
}
