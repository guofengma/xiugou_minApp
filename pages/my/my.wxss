.my{
  font-size: 24rpx;
}
.top-view image{
  width: 40rpx;
  margin-left: 20rpx;
}
.top-view {
  padding:  20rpx 30rpx 0 30rpx;
}
.list-cont{
  position: relative
}
.my-info{
  display: flex;
  align-content: center;
  padding-top: 17rpx;
}
.content-top{
  position: relative;
  background: #fff url(https://mr-uat-sg.oss-cn-hangzhou.aliyuncs.com/sharegoods/resource/xcx/bg_img_user@2x.png) no-repeat left bottom;
  background-size: 100% 100%;
  border-top: 1prx solid #eee;
  
}
.my-info-item{
  padding-top: 12rpx;
}
.my-avatar{
  padding-bottom: 85rpx;
  display: flex;
  align-items: center;
}
.my-name{
  color: #666;
  margin-right: 13rpx;
  height:34px;
  font-size:36rpx;
  font-weight:500;
  line-height:38rpx;
}
.my-info-arrow{
  width: 14rpx;
  height: 24rpx;
  margin-left:12rpx; 
  
}
.avatar-img{
    width: 130rpx;
    height: 130rpx;
    border: solid 4rpx #ffffff;
    border-radius: 50%;
    margin: 38rpx;
    
}
.my-rank{
   position: relative;
  width:88rpx;
  margin-top: 22rpx;
}
.my-rank image{
  position: relative;
  width:88rpx;
  height:48rpx;
  
}
.my-rank-no{
  position: absolute;
  top: 0;
  left:37rpx;
  bottom: 0;
  margin: auto;
  color: #ffffff;
}
.my-save{
  position: absolute;
  right: 0;
  width: 199rpx;
  height: 67rpx;
  background: #FFC079;
  border-top-left-radius:34rpx;
  border-bottom-left-radius:34rpx;
  bottom: 76rpx;
  text-align: center;
  color: #ffffff;

}
.my-account{
  background: #ffffff;
  margin-top: 21rpx;
  padding:0 30rpx 10rpx 30rpx;
  
}
.my-account-item{
   height: 88rpx;
   line-height: 88rpx;
   color: #666;
   font-size: 32rpx;
   font-weight:400;
   border-bottom: 1rpx solid #ddd;
}
.my-account-list{
  display: flex;
  height: 206rpx;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
}
.my-account-list>view{
  width: 221rpx;
  height: 123rpx;
  border-radius: 10rpx;
  text-align: center;
  
}
.account-num{
  font-size:37rpx; 
  line-height:76rpx;
  font-weight:600;
  height: 76rpx;
}
.my-account-coin{
background:rgba(255,79,110,1);
border-radius:10rpx;
box-shadow:5rpx 0px 10rpx rgba(255,79,110,0.54);
}
.my-account-xiudou{
background:rgba(255,192,121,1);
border-radius:10rpx;
box-shadow:5rpx 0px 10rpx rgba(255,192,121,0.54);
}
.my-account-leave{
background:rgba(142,199,255,1);
border-radius:10rpx;
box-shadow:5rpx 0px 10rpx rgba(142,199,255,0.54);
}
.my-order{
  width: 100%;
  margin-top:20rpx;
  background: #ffffff; 
}
.my-order-item{
   margin:0 30rpx; 
   display: flex;
   justify-content: space-between;
   height: 88rpx;
   color: #666;
   line-height: 88rpx;
   border-bottom: 1rpx solid #ddd;
}
.my-order-list{
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  height: 206rpx;
  align-items: center;
  text-align: center;
}
.my-tools-cont{
  width: 25%;
  text-align: center;
}

.forsale{
  width: 48rpx;
  height: 45rpx;
}
.my-tools{
  margin-top: 20rpx;
  background: #ffffff;
}
.my-tools-item{
  margin: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #ddd;
  
}
.my-tools-list{
  padding: 30rpx;
  display: flex;
  /* justify-content:space-between; */
  flex-wrap: wrap;
  height: 366rpx;
  align-items: center;
  color: #666;
  
}
.my-tools-list image{
  margin-bottom: 26rpx;
}

.my-wait-pay{
  position: relative;
}
.reddot{
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background: red;
  text-align: center;
  color: white;
  right: 0;
  top: -10rpx;
}