@import "/css/app";

/* @import "/components/tips-cancel-order/tips-cancel-order"; */

@import "/components/tips-delete-order/tips-delete-order";
/*搜索产品异常显示  */
@import  "/components/result-tips/result-tips";

@import "/components/search-bar/search-bar.wxss";
.label-line{
  height: 38rpx;
  line-break: 38rpx;
}
.order-list{
    margin-top: 20rpx;
}
.header{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    background: #fff;
}
.left{
    float: left;
    width: 70%;
    margin-left: 30rpx;
}
.right{
    float: right;
    width: 20%;
    margin-right: 30rpx;
    text-align: right;
}
.clearfix{
    clear: both;
}
.body{
    font-size: 26rpx;
    color: #222222
}
.item{
    display: flex;
    justify-content: space-around;
    padding: 20rpx 30rpx 0;
}
.item image{
    width: 160rpx;
    height: 160rpx;
    background-color: #d6d3d3;
}
.item-area{
   margin-bottom: 20rpx;
}
.goods-inf{
    width: 60%;
    padding: 0 10rpx;
}
.color-classify{
    margin-top: 20rpx;
    color: #999999;
}
.org-price{
    text-decoration: line-through;
    color: #999999;
}
.num{
    color: #999999;
    text-align: right;
    margin-top: 20rpx;
}
.amount{
    text-align: right;
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
}
/* .money{
  font-size: 30rpx;
} */
.freight{
    color: #999999;
    margin-left: 10rpx;
}
.time{
    color: #999999;
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 2rpx;
    padding: 0 30rpx;
}
.footer{
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 2rpx;
}
.footer .left{
    width: 43%;
    font-size: 24rpx !important;
}
.footer .right{
    width: 47%;
    text-align: right;
    /* margin-top: -10rpx; */
    
}
.cancel-btn{
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #ffffff;
    border-radius: 30rpx;
    border: solid 1rpx #dddddd;
    color: #666666;
    text-align: center;
    display: inline-block;
}
.pay-btn{
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #ffffff;
    border-radius: 30rpx;
    border:1rpx solid;
    text-align: center;
    display: inline-block;
    margin-left: 10rpx;
}

/*模态框的样式  */
.model-view-bg .tips-box{
    width: 590rpx;
    min-height: 300rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    box-sizing: border-box;
}
.model-view-bg .cancel-btn{
    background-color: #f00006;
    color: #fff;
    width:276rpx;
    height:80rpx;
    line-height: 80rpx;
    margin:20rpx;
    border-radius:10rpx;
}
