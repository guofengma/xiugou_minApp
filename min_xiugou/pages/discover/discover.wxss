@import "/pages/discover/discover-item/discover-item.wxss";
@import "/pages/discover/discover-article/discover-article.wxss";
.discover-tab {
  display: flex;
  background: #fff;
  border-top:1rpx solid #ddd;
  position:fixed;
  width:100%;
  top:0;
  left:0;
  z-index: 1;
}
.discover-tab_item {
  flex:1;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #666;
  padding: 36rpx 0;
  text-align: center;
}
.discover-tab_item.active {
  color: #f00006;
  border-bottom: 4rpx solid #f00006;
}

.discover-top-swiper {
  margin-top: 20rpx;
}
.discover-top-swiper image {
  width: 600rpx;
  height: 350rpx;
  border-radius: 15rpx;
}

.discover-hot-swiper .slide-image {
  width: 560rpx;
  height: 280rpx;
  border-radius: 15rpx;
}
.discover-hot-desc {
  position:absolute;
  bottom:0;
  width:calc(100% - 30rpx);
  display:flex;
  justify-content:space-between;
  box-sizing:border-box;
  padding:10rpx 20rpx;
  color: #fff;
  font-size: 22rpx;
}
.discover-hot-desc .discover_view {
  color: #fff;
}
.discover-topic-title {
  font-size:38rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color: #333;
  margin: 30rpx 0;
  text-align: center;
}
.discover-list {
  padding: 0 30rpx;
}

.discover-handpick {
  padding: 0 30rpx;
}
.discover-article-container {
  background:#fff;
  padding:20rpx;
  margin-bottom:20rpx;
}
.discover-tab-new,.discover-tab-hot-assist {
  margin-top: 136rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}