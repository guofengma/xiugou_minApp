}
.tips{
    height: 96rpx;
    line-height: 96rpx;
    padding:0 30rpx;
    color: #c8c8c8;
}
.section{
    display: flex;
    height: 96rpx;
    line-height: 96rpx;
    background: #fff;
}
.item{
    padding-left: 30rpx;
    float: left;
    width: 15%;
}
.input-area{
  float: left;
  width: 60%;
}
.img-area{
  float: right;
  width: 20%;
  padding-right: 30rpx;
  text-align: right;
}
.delete-btn{
    margin-right: 10rpx;
}
.clearfix{
  clear: both
}
.inp{
    height: 96rpx;
    line-height: 96rpx;
    background-color: #ffffff;
