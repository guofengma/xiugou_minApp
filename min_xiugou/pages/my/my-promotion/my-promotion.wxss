@import "/libs/wxParse/wxParse.wxss";
.bg-area{
  background: url("${mrdomain}/home_jingshenqingk_bg@3x.png") no-repeat top center;
  background-size:100% 100%;
  color: #fff;
  height: 364rpx;
  padding: 30rpx;
  display: flex;
}
.img-area{
   margin-left: 72rpx;
   height: 210rpx;
}
.img-area image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.levelName{
  font-size: 30rpx;
  color: #fff;
  height: 210rpx;
  margin-left: 30rpx;
  align-items: flex-start;
}
.level-label{
  background: rgba(255,255,255,0.4)  url("${mrdomain}/dianyuanxiangqiing_icon@3x.png") no-repeat 2rpx 2rpx;
  margin-top: 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  background-size: 28rpx 28rpx;
  border-radius: 20rpx;
  border:1rpx solid #ff8f20;
  padding-left: 32rpx;
  padding-right: 14rpx;
}
.base-bar>view {
  height: 100%;
  width: 50%;
  font-size: 28rpx;
}
.base-bar>view:first-child{
  border-top: 1rpx solid #ddd;
}
.growing-view-bg{
  position: absolute;
  top:230rpx;
  width: 100%;
}
.growing-view{
  width:690rpx;
  height:259rpx;
  margin: 0 auto;
  /* background: transparent url("${mrdomain}/promotion-bg.png") no-repeat; */
  background: #fff;
  /* background-size: 100%; */
  border-radius:14px;
  box-shadow:0px 0px 20px 0px rgba(0,0,0,0.1);
  padding: 0 30rpx;
}
.growing-question{
  padding-bottom: 150rpx;
}
.icon-growing{
  height: 88rpx;
  padding-left: 40rpx;
  background: transparent url("${mrdomain}/my-promotion-icon.png") no-repeat left 28rpx;
  background-size: 30rpx;
}
.growing-value{
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.growing-bar{
  width:100%;
  height:16rpx;
  background:#ddd;
  border-radius:8px;
  position: relative;
  overflow: hidden;
  margin-bottom:26rpx;
}
.growing-bar-value{
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
  background-image: linear-gradient(90deg, #FF567F 0%, #FC6D55 100%), 
	linear-gradient(#ffffff, #ffffff);
}
.growing-question{
  margin-top: 186rpx;
}
.title{
  min-height: 88rpx;
  line-height: 88rpx;
  padding: 0 50rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}
.growing-question>view:last-child{
  padding: 30rpx;
}
.growing-question>view{
  background: #fff;
}