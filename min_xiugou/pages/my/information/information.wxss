/* pages/my/account.wxss */
.order{
    font-size:26rpx;
    color: #222222;
    margin-bottom: 20rpx;
    padding-top: 30rpx;
}
.wrap{margin-top: 30rpx}
.item{background: #fff;height: 120rpx;line-height:120rpx;padding: 0 30rpx;display: flex;}
.item .left{width: 75%}

.item view:nth-child(2){width: 25%;text-align: right;margin-right: 20rpx}
.line{border-bottom: 1px solid #eee}

.item text{
  margin-left: 15rpx;
}

.num{
    border-radius: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    min-width: 20rpx;
    text-align: center;
    display: inline-block;
    padding: 0 10rpx;
}
/*弹窗*/
.tips-icon{
    position: absolute;
    top: -94rpx;
    left:0;
    width: 100%;
}
.tips-icon>view{
    width: 260rpx;
    height: 200rpx;
    background: #fff;
    background: transparent url(https://cdn.sharegoodsmall.com/sharegoods/resource/xcx/notice.png) no-repeat;
    background-size: 100%;
    margin-left: 50rpx;
}
.tips-delete-order .tips-box{
    position: relative;
    padding: 150rpx 0 50rpx;
    background: #fff;
    width: 80%;
    border-radius: 20px;
    margin-left: 10%;
}
.tips-delete-order .content{
    font-size:30rpx;
    text-align: center;
}
.btn-content{
    margin-top:70rpx;
}
.content .big{
    font-size: 48rpx;
    margin-bottom: 24rpx
}
.tips-delete-order .btn-content>view{
    width: 220rpx;
    height: 69rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    margin-left: 50%;
    transform: translateX(-50%);
}
.tips-delete-order .leftBtn{
    background-color: #dddddd;
    margin-right: 10rpx;
}
.tips-delete-order>view{
    padding-top: 100rpx;
    width: 100%;
}
.tips-box image{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    right: 0;
    top:0;
    z-index: 9999999;
}