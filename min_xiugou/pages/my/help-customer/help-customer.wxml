            <view>{{item.name}}</view>
          </view>
          <view class="right">
            <view class="item"  wx:for='{{item.helpQuestionExtList}}' wx:key='unique' 
                  wx:for-item="detail" wx:for-index="key"  catchtap='toDetail'  data-id='{{detail.id}}' wx:if="{{key<2}}">
