  <view class="question-area">
      <view class="question-item" wx:for='{{list}}' wx:key='unique' >
          <view class="left" catchtap="questionList" data-typeid='{{item.title}}'>
            <!-- <image-sub imgStyle='{{"width:74rpx"}}' imgSrc="{{'help_order.png'}}"/> -->
