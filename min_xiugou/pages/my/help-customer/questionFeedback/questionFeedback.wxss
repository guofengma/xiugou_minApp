
@import "/components/update-img/update-img";
.feedback{
    font-size: 30rpx;
    color: #222222;
    padding-top: 2rpx;
    width: 100%
}
.wrap{
    margin-top: 20rpx;
   
}
.item{background: #fff;height: 96rpx;line-height: 96rpx;padding: 0 30rpx;display: flex;}
.item view:first-child{width: 75%}
.item view:nth-child(2){width: 25%;text-align: right;margin-right: 20rpx}
.jt-img{
    width:30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-left: 10rpx;
}
.detail-remark,.phone-area{
  background: #fff;
  margin-top: 2rpx
}

.textarea{
    width:90%;
    height: 200rpx;
    padding: 20rpx 5%;
    line-height: 40rpx;
    z-index: 1
}
.number{
  color: #c8c8c8;
  font-size: 26rpx;
  text-align: right;
  margin-right: 5%;
  line-height: 60rpx
}
.phone-area{
  height: 200rpx;
  padding: 20rpx 20rpx 0
}
.btn{
  margin-top: 100rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  width: 80%;
	height: 96rpx;
  line-height: 96rpx;
	background-color: #dddddd;
	border-radius: 10rpx;
  text-align: center;
  color:#fff;
  font-size: 32rpx;
}
.active{
  background-color: #f00006;
}
.mask{
    z-index: 2;
    background: rgba(0,0,0,.7);
    position: absolute;
    top:90rpx;
    width: 100%;
    height: 100%;
}
.type-area{
    background: #fff;
    padding: 0 0 0 20rpx;
}
.type-area .item{
    border-top:1rpx solid #dddddd;
}
.grey{
    background-color: #eeeeee;
}
.success-mask{
    position: fixed;
    top:0;
    width: 100%;
    height:100%;
    background: rgba(0,0,0,.5);
    z-index: 3;
}
.success-area{
    width: 70%;
    background-color: #ffffff;
    border-radius: 10rpx;
    margin-left: 50%;
    margin-top: 30%;
    transform: translateX(-50%);
}
.success-content{
    text-align: center;
    padding:50rpx 120rpx;
}
.success-content image{
    width: 142rpx;
    height: 141rpx;
}
.success-content .success{
    font-size: 30rpx;
    color: #222222;
    margin: 20rpx 0;
}
.success-content .tip{
    font-size: 26rpx;
    color: #999999;
}
.success-btn{
    width: 100%;
    height:80rpx;
    line-height: 80rpx;
    background-color: #eeeeee;
    border-radius: 0 0 10rpx 10rpx;
    font-size: 30rpx;
    color: #222222;
    text-align: center;
}
.visibility{
  visibility:hidden
}