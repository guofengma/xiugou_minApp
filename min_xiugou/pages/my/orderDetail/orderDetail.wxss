/*三角形样式  */
.popup{
    display:block; 
    width:0; 
    height:0; 
    border-width:0 20rpx 20rpx; 
    border-style:solid; 
    border-color:transparent transparent #eee; 
    position:absolute; 
    top:-10px; 
    right: 30rpx;
}
.popup>view{
    display:block; 
    width:0; 
    height:0; 
    border-width:0 20rpx 20rpx; 
    border-style:solid; 
    border-color:transparent transparent #fff; 
    position:absolute; 
    top:3rpx; 
    left:-19rpx;
}
