    background: #8EC7FF;
    border-radius: 16rpx;
    padding: 30rpx;
    align-items: flex-start
}
.num{
  font-size: 48rpx;
}
.btn{
    width: 200rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    border: solid 1rpx #ffffff;
    font-size: 28rpx;
    color: #fff;
}

.explain image{
    width: 26rpx;
    height: 26rpx;
    margin-right: 5rpx;
    vertical-align: middle;
}
.list-item{
  background: #fff;
  width: 100%;
  margin-bottom: 2rpx;
  padding: 30rpx;
  position: relative;
  box-sizing: border-box;
}
.detail-content{
  width: 70%;
  justify-content: flex-start
}
.list-item image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}
.style{
    font-size: 30rpx;
    color: #222222;
}
.money{
    font-size: 36rpx;
    /* color: #222222; */
    position: absolute;
    right: 30rpx;
}
.time{
    margin-top: 10rpx;
}
.time,.number{
    font-size: 26rpx;
    color: #999999;
}
.number image{
    width: 26rpx;
    height: 26rpx;
    background-color: #fff;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -5rpx;
}
.info{
    padding: 40rpx 40rpx 0;
}
.question{
    font-size: 30rpx;
    color: #000000;
}
.answer{
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 20rpx;
}
.gray-text{
  color: #666666;
}