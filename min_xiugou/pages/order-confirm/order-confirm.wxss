.gift-view{
  padding:15rpx 30rpx 0 30rpx;
}
/* 礼包优惠卷 */
.gift-items{
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 30rpx;
  background: #fff url(https://mr-uat-sg.oss-cn-hangzhou.aliyuncs.com/sharegoods/resource/xcx/iconForobtain.png) no-repeat 30rpx 25rpx;
  background-size:32rpx 32rpx;
}
.gift-items>.gift-line:last-child{
  border-bottom: 0;  
}
.gift-line{
  margin-left: 72rpx;
  border-bottom: 1rpx solid #ddd;
  height: 68rpx;
  padding-right: 30rpx;
}
.getExp{
  margin-left: 0;
  padding-left: 70rpx;
  background: #fff url(https://mr-uat-sg.oss-cn-hangzhou.aliyuncs.com/sharegoods/resource/xcx/iconForobtain.png) no-repeat 30rpx center;
  background-size:32rpx 25rpx;
}