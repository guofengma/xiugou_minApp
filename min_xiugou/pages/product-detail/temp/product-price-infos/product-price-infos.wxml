<template name="product-info">
    <view class='prd-info boxSize whiteBg'>
        <view class='prd-name ellipsis-2'>{{productInfo.name}}</view>
        <view class='font-26 gray secondName'>{{productInfo.secondName || ''}}</view>
        <view class='flexR-sb'>
            <view>
                <view class='price' wx:if='{{showPrice}}'>
                    <text class='label-pd red'>{{productInfo.userLevelTypeName}}</text>
                    <text class='price1 red'>{{productInfo.showPrice}}</text>
                    <text class='price2 gray-9' wx:if='{{productInfo.priceType>1}}'>¥ {{productInfo.originalPrice}}
                    </text>
                </view>
                <view class='shippingInfo gray-9'>
                    <text style='margin-right:158rpx'>快递：{{productInfo.freight || '包邮'}} {{productInfo.freight?
                        "元":""}}
                    </text>
                    <text>月销: {{productInfo.monthSaleCount}}笔</text>
                </view>
            </view>
            <view class='group-price flexC' wx:if='{{groupPrice}}' catchtap='groupClicked'>
                拼店价
                <view class='red'>¥ {{productInfo.groupPrice || 0}}</view>
            </view>
        </view>
    </view>
</template>

<template name="product-info-chooseBox">
    <view class='gray whiteBg'>
        <text class='label red'>服务</text>
        正品保障·极速发货
        <text wx:if='{{productInfo.showAfterSaleServiceDays&&door!=5}}'>·7天无理由退换货</text>
        <!--<text wx:if='{{productInfo.afterSaleServiceDays<-0&&door!=5}}'>·无售后服务</text>-->
    </view>
</template>